{
  "extends": [
    "tslint:recommended"
  ],
  "rules": {
    "only-arrow-functions": [true, "allow-named-functions"],
    "ban": {
      "options": [{
          "name": "parseInt",
          "message": "use #type-coercion -> Number(val)"
        },
        {
          "name": "parseFloat",
          "message": "use #type-coercion -> Number(val)"
        },
        {
          "name": "Array",
          "message": "use #array-constructor"
        },
        {
          "name": [
            "describe",
            "only"
          ],
          "message": "don't focus spec blocks"
        },
        {
          "name": [
            "it",
            "only"
          ],
          "message": "don't focus tests"
        }
      ]
    },
    "comment-format": false,
    "completed-docs": false,
    "curly": false,
    "file-name-casing": {
      "options": [
        "kebab-case"
      ]
    },
    "increment-decrement": false,
    "interface-name": {
      "options": "always-prefix"
    },
    "interface-over-type-literal": false,
    "match-default-export-name": true,
    "member-access": {
      "options": [
        "no-public"
      ]
    },
    "member-ordering": false,
    "newline-before-return": false,
    "no-any": true,
    "no-bitwise": true,
    "no-boolean-literal-compare": true,
    "no-console": [true, "log", "info"],
    "no-default-export": false,
    "no-default-import": false,
    "no-inferrable-types": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": {
      "options": "check-function-in-method"
    },
    "no-magic-numbers": true,
    "no-namespace": {
      "options": [
        "allow-declarations"
      ]
    },
    "no-parameter-reassignment": true,
    "no-require-imports": true,
    "no-this-assignment": false,
    "no-unsafe-any": true,
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "prefer-template": true,
    "quotemark": false,
    "semicolon": false,
    "switch-default": true,
    "trailing-comma": false,
    "typedef": false,
    "variable-name": {
      "options": [
        "allow-leading-underscore"
      ]
    }
  },
  // apply the same rules for any JS if allowJS is gonna be used
  "jsRules": true
}
