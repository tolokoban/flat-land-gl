{
    "compilerOptions": {
        "alwaysStrict": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "composite": false,
        "declaration": true,
        "declarationMap": true,
        "diagnostics": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "incremental": false,
        "lib": [
            "dom",
            "dom.iterable",
            "es6"
        ],
        "module": "es6",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "noImplicitReturns": false,
        "outDir": "./dist/",
        "removeComments": false,
        "rootDir": "./src/",
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true,
        "target": "es5"
    },
    "include": [
        "src/"
    ],
    "exclude": [
        "src/**/color.ts",
        "src/**/*.spec.*",
        "src/**/*.test.*"
    ]
}
